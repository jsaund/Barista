<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:demitasse="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#FF252525"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.barista.demitasse.examples.RadialProgressIndicatorActivity">

    <com.barista.demitasse.widgets.RadialProgressIndicator
        android:id="@+id/radial_progress_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        demitasse:indicatorColor="#FFDCFF4F"
        demitasse:indicatorStyle="percentage"
        demitasse:max="1000"
        demitasse:progress="0"
        demitasse:textColor="#FFE0E0E0"
        demitasse:trackColor="#40FFFFFF"
        demitasse:secondaryThickness="4dp"
        demitasse:secondaryTrackColor="#0FFFFFFF"
        demitasse:secondaryIndicatorColor="#FFFF5A00"
        demitasse:smoothAnimation="true"/>

</RelativeLayout>

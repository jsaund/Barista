<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:demitasse="http://schemas.android.com/apk/res-auto">

    <com.barista.demitasse.widgets.AudioVisualizer
        android:id="@+id/classic_analyzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.barista.demitasse.widgets.BarRender
            android:layout_width="@dimen/bar_render_width"
            android:layout_height="@dimen/bar_render_height"
            android:layout_margin="2dp"
            demitasse:primaryColor="@color/analyzer_primary_color"
            demitasse:secondaryColor="@color/analyzer_secondary_color"
            demitasse:peakBarHeight="@dimen/bar_render_peak_bar_height"
            demitasse:peakBarSpace="@dimen/bar_render_peak_bar_space"
            demitasse:showPeakBar="true"/>
        <com.barista.demitasse.widgets.BarRender
            android:layout_width="@dimen/bar_render_width"
            android:layout_height="@dimen/bar_render_height"
            android:layout_margin="2dp"
            demitasse:primaryColor="@color/analyzer_primary_color"
            demitasse:secondaryColor="@color/analyzer_secondary_color"
            demitasse:peakBarHeight="@dimen/bar_render_peak_bar_height"
            demitasse:peakBarSpace="@dimen/bar_render_peak_bar_space"
            demitasse:showPeakBar="true"/>
        <com.barista.demitasse.widgets.BarRender
            android:layout_width="@dimen/bar_render_width"
            android:layout_height="@dimen/bar_render_height"
            android:layout_margin="2dp"
            demitasse:primaryColor="@color/analyzer_primary_color"
            demitasse:secondaryColor="@color/analyzer_secondary_color"
            demitasse:peakBarHeight="@dimen/bar_render_peak_bar_height"
            demitasse:peakBarSpace="@dimen/bar_render_peak_bar_space"
            demitasse:showPeakBar="true"/>
        <com.barista.demitasse.widgets.BarRender
            android:layout_width="@dimen/bar_render_width"
            android:layout_height="@dimen/bar_render_height"
            android:layout_margin="2dp"
            demitasse:primaryColor="@color/analyzer_primary_color"
            demitasse:secondaryColor="@color/analyzer_secondary_color"
            demitasse:peakBarHeight="@dimen/bar_render_peak_bar_height"
            demitasse:peakBarSpace="@dimen/bar_render_peak_bar_space"
            demitasse:showPeakBar="true"/>
    </com.barista.demitasse.widgets.AudioVisualizer>

</merge>